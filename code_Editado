package homework3;
import java.util.ArrayList;
import java.util.List;
import java.util.Random;
import java.util.Scanner;
public class outraforca {
public static void main (String [] args){

Scanner sc = new Scanner(System.in);

char letra;
int opcao, sorteio, outraopcaola;
String senha, senha_Insert;
senha = "A";
String pGame, teste;

String forca = " |-----| \r\n " + "|     | \r\n " + "| \r\n " + "| \r\n " + "| \r\n " + "| \r\n " + "|__\r\n"
+ "       \r\n" + "PALAVRA: ";

List<String> palavras = new ArrayList<String>();
palavras.add("banana");
palavras.add("laranja");
palavras.add("limão");
palavras.add("abacaxi");
palavras.add("maça");
palavras.add("tomate");
palavras.add("cereja");
palavras.add("acerola");
palavras.add("kiwi");
palavras.add("mamão");
palavras.add("fruta do conde");
palavras.add("jambo");
palavras.add("framboesa");
palavras.add("maracuja");
palavras.add("amora");

Random r = new Random();

System.out.println("----JOGO DA FORCA----");
System.out.println("---------MENU--------");
System.out.println("1# Adicionar palavra");
System.out.println("2# Iniciar Jogo");//foi clarificado no pdf que adicionar palavra deveria ser a primeira opção
System.out.println("3# Sair");
opcao = sc.nextInt();



while (opcao < 0 || opcao > 3);{
switch (opcao){

/*metodo de verificação de ususário e adição de palavras*/
case 1:
System.out.println("--MENU--\n1 - Inserir senha de administrador.\n2 - Voltar para menu principal.");
outraopcaola = sc.nextInt();
if (outraopcaola == 1){
System.out.println("Insira a senha de administrador: ");
senha_Insert = sc.next();
if (senha_Insert.equals(senha)){

for (int i = 0; i < 1; i++)
{System.out.println("Informe uma palavra com entre 5 e 7 letras: ");
palavras.add(sc.next());
for (String palavra : palavras) {
System.out.println(palavra);
}



}
break;
}
}
case 2:
sorteio = r.nextInt(palavras.size());
pGame = palavras.get(sorteio);
/*método para sortear palavra que está no Arrya*/

System.out.println(forca);
System.out.println(pGame);
String[] palavraEscondida = new String[pGame.length()];

for(int i = 0; i < palavraEscondida.length; i++) {
palavraEscondida[i] = "_";
System.out.print(palavraEscondida[i] + " ");
}

teste = pGame;

int acertos = 0;
int erros = 0;
do {
System.out.println("");
System.out.println("Insira uma letra: ");
letra = sc.next().charAt(0);

/*LÓGICA VERIFICAR E INSERIR LETRA*/

for (int i = 0; i < pGame.length(); i++) {

if (pGame.charAt(i) == letra) {
palavraEscondida[i] = Character.toString(letra);
acertos ++;
System.out.println("erros" + erros);
System.out.println("acertos" + acertos);
}else {
erros ++;//adicionar else if com outra condição
}
}

for(int i = 0; i < palavraEscondida.length; i++) {

if(palavraEscondida[i] != "_") {
System.out.print(palavraEscondida[i] + " ");
}
else {
System.out.print(palavraEscondida[i] + " ");
}

}

}while(acertos < teste.length());

System.out.println("\n\rVoce ganhou meu corno!");
break;
default:
System.out.println("Opção inválida.");
break;
}
System.out.println("----JOGO DA FORCA----");
System.out.println("---------MENU--------");
System.out.println("1# Adicionar palavra");
System.out.println("2# Iniciar Jogo");//foi clarificado no pdf que adicionar palavra deveria ser a primeira opção
System.out.println("3# Sair");
opcao = sc.nextInt();
}
